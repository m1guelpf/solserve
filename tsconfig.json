{
	"compilerOptions": {
		"lib": ["es5", "es6", "esnext"],
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "./dist",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"strict": true,
		"baseUrl": ".",
		"paths": {
			"*": ["node_modules/*", "src/types/*"]
		}
	},
	"include": ["src/**/*"]
}
